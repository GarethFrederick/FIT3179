{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/GarethFrederick/FIT3179/main/Data/20062019GDP.csv",
    "format": {
      "type": "csv"
    }
  },
  "params": [
    {
      "name": "Current_Year",
      "value": 2006,
      "bind": {
        "input": "range",
        "min": 2006,
        "max": 2019,
        "step": 1,
        "name": "Drag to change the year "
      }
    }
  ],
  "transform": [
    {
      "lookup": "country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/GarethFrederick/FIT3179/main/Data/ne_50m_admin_0_countries.json",
          "format": {
            "type": "topojson",
            "feature": "ne_50m_admin_0_countries"
          }
        },
        "key": "properties.NAME",
        "fields": [
          "properties",
          "type",
          "geometry"
        ]
      }
    },
    {
      "filter": "datum.year == Current_Year"
    }
  ],
  "projection": {
    "type": "naturalEarth1"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "black",
    "strokeWidth": 1
  },
  "encoding": {
    "color": {
      "field": "GDP/Capita",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [
          5630,
          112000
        ],
        "range": [
          "#ffffff",
          "#2171b5",
          "#1E448A",
          "#000000",
          "#333333"
        ]
      },
      "title": "GDP per Capita (US$)",
      "legend": {
        "title": "GDP per Capita (US$)",
        "orient": "right"
      }
    },
    "tooltip": [
      {
        "field": "properties.NAME",
        "type": "nominal",
        "title": "Country "
      },
      {
        "field": "GDP/Capita",
        "type": "quantitative",
        "title": "GDP per Capita (US$) "
      }
    ]
  },
  "config": {
    "view": {
      "strokeWidth": 0
    },
    "background": "#F5F5F5"
  }
}
